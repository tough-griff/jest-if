{
  "name": "jest-if",
  "version": "1.0.0",
  "description": "Conditional tests for jest",
  "keywords": [
    "jest"
  ],
  "author": "Griffin Yourick <gryphon92@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tough-griff/jest-if.git"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "jest"
  },
  "devDependencies": {
    "@tough-griff/eslint-config": "^1.1.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.0",
    "codecov": "^3.8.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": "@tough-griff",
    "env": {
      "jest": true
    },
    "rules": {
      "no-param-reassign": "off"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.json": "prettier --write",
    "*.ts": "prettier --write",
    "*.md": "prettier --write",
    "*.y{,a}ml": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
